<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/layout_profile_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id = "@+id/profile_user"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_profile_person"
            android:contentDescription="@string/profile_user" />

        <LinearLayout
            android:id="@+id/layout_data_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="15dp">

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/user_name"
                android:textSize="24sp"
                android:textColor="@color/grey"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profile_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email_user"
                android:textSize="20sp"
                android:textColor="@color/grey"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_profile_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="150dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_change_mode"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_theme"
            android:contentDescription="@string/profile_user" />

        <TextView
            android:id="@+id/tv_change_mode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/theme"
            android:textSize="24sp"
            android:textColor="@color/grey"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"/>

        <ImageView
            android:id="@+id/iv_change_mode_arrow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_arrow_right"
            android:contentDescription="@string/profile_user"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_profile_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="220dp"
        android:gravity="center_vertical">

        <ImageView
            android:id = "@+id/iv_change_language"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_language"
            android:contentDescription="@string/profile_user" />

        <TextView
            android:id="@+id/tv_change_language"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/language"
            android:textSize="24sp"
            android:textColor="@color/grey"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"/>

        <ImageView
            android:id="@+id/iv_change_language_arrow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_arrow_right"
            android:contentDescription="@string/profile_user" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/orange700"
        android:text="@string/logout"
        android:textSize="16sp"
        android:textStyle="bold"/>
</RelativeLayout>